Function Size_dist(w,D) : FitFunc	// Gaussian
	Wave/D w
	Variable D

	Variable fwhm=w[3]
	
	Return 1/(fwhm/sqrt(2*ln(2))*sqrt(pi/2))*exp(-2*((D-w[2])^2)/(fwhm/sqrt(2*ln(2)))^2)
End

